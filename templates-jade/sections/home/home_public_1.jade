{% extends 'shared/dw/layout_1.html'%}
{% load cms_tags menu_tags sekizai_tags %}
{% load static from staticfiles%}
{% load copy %}


{% block content %}
section.home_public
  .section_intro
    .wrapper
      .row.no-gutters
        .col-xs-10.text-center.col-xs-offset-1
          figure
            img(src="{% static 'imgs/home_public/intro_logo.png' %}", alt="logo")
      .row.no-gutters
        .col-xs-10.text-center.col-xs-offset-1
          h1(class="wg_p cl_1 title_1 wg_m mt_35 font_2 xs_title_1")
            {% copy 'h1_somos' default='SOMOS'%}
            span.wg_p.cl_2
              {% copy 'h1_indepen' default='INDEPENDIENTES' %}
      .row.no-gutters.wg_m.mt_70
        .col-xs-10.text-center.col-xs-offset-1
          span.wg_p.cl_1.text_2.p_block
            {% copy 'sp_hacer_scroll' default='Hacer scroll' %}
      .row.no-gutters.wg_m.mt_20
        .col-xs-10.text-center.col-xs-offset-1
          figure#scroll_mouse
            img(src="{% static 'imgs/home_public/mouse_peripheral.png' %}", alt="mouse peripheral", class="wg_cursor c_pointer")

  {% include "shared/dw/header_1.html" %}

  section.section_about_us
    .wrapper
      .row.no-gutters
        .col-xs-10.text-center.col-xs-offset-1
          figure
            img(src="{% static 'imgs/home_public/nosotros_logo.png'%}", alt="nosotros logo")
      .row.no-gutters.wg_m.mt_90
        div(class="col-lg-8 col-md-8 col-sm-10 col-xs-10 text-center col-lg-offset-2 col-md-offset-2 col-sm-offset-1 col-xs-offset-1")
          p.wg_p.font_1.cl_1.text_4
            span.wg_p.text_5.cl_1.p_bold
              {% copy 'section_about_us_dw' default='Somos Digital Workers, '%}
            {% copy 'section_about_us_desp' default='una empresa nacida con base en Bogotá D.C - Colombia. Nuestro objetivo es darle presencia en la internet a pequeñas y medianas  empresas que confien en nosotros. Por eso y más, queremos ser la agencia de diseño y programación de su preferencia.' %}
  
  section.section_about_services
    .wrapper
      .content_title
        .row.no-gutters
          .col-xs-10.col-xs-offset-1
            h2(class="wg_p wg_m font_2 text_6 cl_3 p_bold")
              {% copy 'section_about_services_title' default='NUESTROS SERVICIOS' %}
        .row.no-gutters
          div( class="col-lg-10 col-md-10 col-sm-10 col-xs-10 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 col-xs-offset-1")
            p(class="wg_p text_7 cl_3 font_3")
              {% copy 'section_about_services_des' default='Tenemos los mejores servicios para lograr que tu empresa sea la numero uno en el mercado digital.' %}
    .sau_services.wg_m.mt_70
      .row.no-gutters
        .col-xs-12
          {% for item in services %}
          div(class="col-lg-6 text-center wg_m mb_75")
            .icon
              {% render_placeholder item.icon %}
            span(class="wg_p cl_2 text_3 wg_m mt_20 font_4 p_block p_bold")
              {% render_placeholder item.name %}
            {% render_placeholder item.description %}
          .clearfix
          {% endfor %}
          
              
          
          
              
{% endblock%}
